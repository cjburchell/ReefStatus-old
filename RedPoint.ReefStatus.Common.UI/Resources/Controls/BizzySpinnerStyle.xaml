                                   Fill="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=LeaderBrush}"
                                   Opacity="1.0" 
                                   />
                <Path Width="20.7408" Height="34.7329" Canvas.Left="67.674" Canvas.Top="4.13831" Stretch="Fill" StrokeLineJoin="Round" Stroke="#FF000000" 
