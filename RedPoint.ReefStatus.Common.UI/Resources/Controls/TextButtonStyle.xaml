<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<ResourceDictionary.MergedDictionaries>
		<ResourceDictionary Source="BasicButtonStyle.xaml"/>
	</ResourceDictionary.MergedDictionaries>

    <Style x:Key="TextButton" TargetType="{x:Type Button}" BasedOn="{StaticResource BasicButton}">
        <Setter Property="Height" Value="24"/>
        <Setter Property="MaxWidth" Value="200"/>
        <Setter Property="Padding" Value="10,0"/>
        <Setter Property="MinWidth" Value="70"/>
    </Style>

    <Style x:Key="TextButtonStyle" TargetType="{x:Type Button}" BasedOn="{StaticResource TextButton}">
    </Style>

</ResourceDictionary>